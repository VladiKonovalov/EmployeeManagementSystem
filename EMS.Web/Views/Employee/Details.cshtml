@model EMS.Domain.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-user"></i> Employee Details
        </h3>
        <div class="card-tools">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="info-group mb-3">
                    <label class="form-label text-muted">First Name</label>
                    <div class="info-value">@Html.DisplayFor(model => model.FirstName)</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="info-group mb-3">
                    <label class="form-label text-muted">Last Name</label>
                    <div class="info-value">@Html.DisplayFor(model => model.LastName)</div>
                </div>
            </div>
        </div>

        <div class="info-group mb-3">
            <label class="form-label text-muted">Email Address</label>
            <div class="info-value">
                <i class="fas fa-envelope text-primary me-2"></i>
                @Html.DisplayFor(model => model.Email)
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="info-group mb-3">
                    <label class="form-label text-muted">Hire Date</label>
                    <div class="info-value">
                        <i class="fas fa-calendar text-success me-2"></i>
                        @Html.DisplayFor(model => model.HireDate)
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="info-group mb-3">
                    <label class="form-label text-muted">Salary</label>
                    <div class="info-value">
                        <i class="fas fa-dollar-sign text-warning me-2"></i>
                        @Html.DisplayFor(model => model.Salary)
                    </div>
                </div>
            </div>
        </div>

        <div class="info-group mb-4">
            <label class="form-label text-muted">Department</label>
            <div class="info-value">
                <i class="fas fa-building text-info me-2"></i>
                <span class="badge bg-info">@Html.DisplayFor(model => model.Department!.Name)</span>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete
            </a>
        </div>
    </div>
</div>

<style>
.info-group {
    padding: 1rem;
    background-color: #f8fafc;
    border-radius: 8px;
    border-left: 4px solid var(--primary-color);
}

.info-value {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-top: 0.25rem;
}

.card-footer {
    background-color: #f8fafc;
    border-top: 1px solid var(--border-color);
    padding: 1rem 1.5rem;
}
</style>
