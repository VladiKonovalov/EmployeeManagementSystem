@model EMS.Domain.Models.Employee

@{
    ViewData["Title"] = "Create Employee";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-user-plus"></i> Create Employee
        </h3>
        <div class="card-tools">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle"></i>
                    Please correct the following errors:
                </div>
            }
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="FirstName" class="form-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="LastName" class="form-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="Enter email address" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="HireDate" class="form-label">Hire Date</label>
                        <input asp-for="HireDate" class="form-control" type="date" min="1950-01-01" max="@DateTime.Today.ToString("yyyy-MM-dd")" 
                               data-date-format="dd/mm/yyyy" />
                        <span asp-validation-for="HireDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Salary" class="form-label">Salary</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Salary" class="form-control" placeholder="Enter salary" type="number" step="0.01" min="0.01" />
                        </div>
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-4">
                <label asp-for="DepartmentId" class="form-label">Department</label>
                @if (ViewBag.Departments != null && ((SelectList)ViewBag.Departments).Any())
                {
                    <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments">
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> No departments available. 
                        <a asp-controller="Department" asp-action="Create" class="alert-link">Create a department first</a>.
                    </div>
                }
            </div>
            
            <div class="form-group">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary" @(ViewBag.Departments == null || !((SelectList)ViewBag.Departments).Any() ? "disabled" : "")>
                        <i class="fas fa-save"></i> Create Employee
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
