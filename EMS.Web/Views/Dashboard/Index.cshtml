@model EMS.Web.Controllers.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<!-- Search Box -->
<div class="search-box mb-4">
    <div class="card-body">
        <form method="get" class="form-inline">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search employees by name or email..." value="@Model.SearchTerm">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Search
                </button>
                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Clear
                    </a>
                }
            </div>
        </form>
    </div>
</div>

<!-- Search Results -->
@if (Model.SearchResults.Any())
{
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title">
                <i class="fas fa-search"></i> Search Results for "@Model.SearchTerm"
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Hire Date</th>
                            <th>Salary</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model.SearchResults)
                        {
                            <tr>
                                <td><strong>@employee.FirstName @employee.LastName</strong></td>
                                <td>@employee.Email</td>
                                <td><span class="badge bg-info">@employee.Department?.Name</span></td>
                                <td>@employee.HireDate.ToShortDateString()</td>
                                <td><strong>@employee.Salary.ToString("C")</strong></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<!-- Statistics Row -->
<div class="row mb-4">
    <!-- Total Employees -->
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card stats-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="card-title">@Model.TotalEmployees</h4>
                        <p class="card-text">Total Employees</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Hires Count -->
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card stats-card bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="card-title">@Model.RecentHires.Count</h4>
                        <p class="card-text">Recent Hires (30 days)</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-user-plus"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Departments Count -->
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card stats-card bg-info">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="card-title">@Model.DepartmentStats.Count</h4>
                        <p class="card-text">Departments</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-building"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Average Salary -->
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card stats-card bg-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="card-title">
                            @if (Model.TotalEmployees > 0)
                            {
                                @Model.AverageSalary.ToString("C")
                            }
                            else
                            {
                                @("$0")
                            }
                        </h4>
                        <p class="card-text">Average Salary</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Department Statistics -->
    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-chart-pie"></i> Employees by Department
                </h5>
            </div>
            <div class="card-body">
                @if (Model.DepartmentStats.Any())
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Department</th>
                                    <th>Employee Count</th>
                                    <th>Percentage</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var dept in Model.DepartmentStats)
                                {
                                    var percentage = Model.TotalEmployees > 0 
                                        ? (dept.EmployeeCount * 100.0 / Model.TotalEmployees) 
                                        : 0;
                                    <tr>
                                        <td><strong>@dept.DepartmentName</strong></td>
                                        <td>
                                            <span class="badge bg-primary">@dept.EmployeeCount</span>
                                        </td>
                                        <td>
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar" 
                                                     style="width: @percentage%">
                                                    @percentage.ToString("F1")%
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No departments found.
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Recent Hires -->
    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-clock"></i> Recent Hires (Last 30 Days)
                </h5>
            </div>
            <div class="card-body">
                @if (Model.RecentHires.Any())
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Department</th>
                                    <th>Hire Date</th>
                                    <th>Days Ago</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model.RecentHires)
                                {
                                    var daysAgo = (DateTime.Today - employee.HireDate).Days;
                                    <tr>
                                        <td><strong>@employee.FirstName @employee.LastName</strong></td>
                                        <td><span class="badge bg-info">@employee.Department?.Name</span></td>
                                        <td>@employee.HireDate.ToShortDateString()</td>
                                        <td>
                                            <span class="badge bg-success">@daysAgo days ago</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No recent hires in the last 30 days.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title">
            <i class="fas fa-bolt"></i> Quick Actions
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3 mb-2">
                <a href="@Url.Action("Index", "Department")" class="btn btn-primary w-100">
                    <i class="fas fa-building"></i> Manage Departments
                </a>
            </div>
            <div class="col-md-3 mb-2">
                <a href="@Url.Action("Index", "Employee")" class="btn btn-success w-100">
                    <i class="fas fa-users"></i> Manage Employees
                </a>
            </div>
            <div class="col-md-3 mb-2">
                <a href="@Url.Action("Create", "Employee")" class="btn btn-info w-100">
                    <i class="fas fa-user-plus"></i> Add Employee
                </a>
            </div>
            <div class="col-md-3 mb-2">
                <a href="@Url.Action("Create", "Department")" class="btn btn-warning w-100">
                    <i class="fas fa-plus"></i> Add Department
                </a>
            </div>
        </div>
    </div>
</div>
