@model EMS.Domain.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Delete Department</h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="alert alert-danger">
                        <h4><i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this department?</h4>
                        <p>This action cannot be undone.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Name</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Department ID</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">Employee Count</dt>
                                <dd class="col-sm-8">@Model.Employees.Count</dd>
                            </dl>
                        </div>
                    </div>

                    @if (Model.Employees.Any())
                    {
                        <div class="alert alert-warning">
                            <h5><i class="fas fa-exclamation-triangle"></i> Warning</h5>
                            <p>This department has @Model.Employees.Count employee(s) assigned to it. You cannot delete a department that has employees.</p>
                            <p>Please reassign or delete all employees in this department before deleting the department.</p>
                        </div>
                    }

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger" @(Model.Employees.Any() ? "disabled" : "")>
                                <i class="fas fa-trash"></i> Delete Department
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
