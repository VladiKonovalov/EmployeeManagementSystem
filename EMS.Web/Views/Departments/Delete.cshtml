@model EMS.Domain.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Delete Department</h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="alert alert-warning">
                        <h4><i class="fas fa-exclamation-triangle"></i> Warning</h4>
                        <p>Are you sure you want to delete this department?</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
                        
                        <dt class="col-sm-2">Employee Count</dt>
                        <dd class="col-sm-10">
                            <span class="badge badge-info">@Model.Employees.Count</span>
                        </dd>
                    </dl>

                    @if (Model.Employees.Any())
                    {
                        <div class="alert alert-danger">
                            <h5><i class="fas fa-ban"></i> Cannot Delete</h5>
                            <p>This department cannot be deleted because it has @Model.Employees.Count employee(s) assigned to it.</p>
                            <p>Please reassign or delete all employees in this department before attempting to delete the department.</p>
                        </div>

                        <h5>Employees in this Department:</h5>
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Hire Date</th>
                                        <th>Salary</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var employee in Model.Employees)
                                    {
                                        <tr>
                                            <td>@employee.FirstName @employee.LastName</td>
                                            <td>@employee.Email</td>
                                            <td>@employee.HireDate.ToShortDateString()</td>
                                            <td>@employee.Salary.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        
                        @if (!Model.Employees.Any())
                        {
                            <div class="form-group">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </div>
                        }
                        
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
